<% provide( :page_header, 'Create New Item' ) %>

<%= form_tag '/items/create_item' do %>

  <div class="form-group col-xs-12">
    <%=label_tag 'name', "Name", class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%=text_field_tag 'name', "", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= label_tag 'Type', "Type", class: 'control-label col-xs-2'  %>
    <div class="col-xs-6">
      <%= select_tag 'type', options_from_collection_for_select(@item_types.all.order(name: :asc), "name", "name"), {class: 'selectpicker form-control'}%>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
      <%= submit_tag 'Submit', class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Back', :back, class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
