<% provide(:page_header, "Damage Tracker") %>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Location</label>
  <div class="form-control-information col-xs-10"><%= @damage.location %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Repaired By</label>
  <div class="form-control-information col-xs-10"><%= @damage.repaired_by %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Description</label>
  <div class="form-control-information col-xs-10"><%= @damage.description %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Occurred On</label>
  <div class="form-control-information col-xs-10"><%= @damage.occurred_on %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Repaired On</label>
  <div class="form-control-information col-xs-10"><%= @damage.repaired_on %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Estimated Cost</label>
  <div class="form-control-information col-xs-10"><%= number_to_currency @damage.estimated_cost %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Actual Cost</label>
  <div class="form-control-information col-xs-10"><%= number_to_currency @damage.actual_cost %></div>
</div>

<div class="form-group col-xs-12">
  <div class="col-xs-offset-2 col-xs-10">
    <%= link_to 'Edit', edit_damage_path(@damage), class: "btn btn-primary" %>
    <% if @damage.hold %>
      <%= link_to 'View Hold', @damage.hold, class: "btn btn-success"%>
    <% else %>
      <%= link_to 'Create Hold', new_hold_path(damage_id: @damage, item_id: @damage.item), class: "btn btn-primary"%>
    <% end %>
    <%= link_to 'View Incurred Incidental', @damage.incurred_incidental, class: "btn btn-success"%>
  </div>
</div>
