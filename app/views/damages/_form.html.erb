<%= form_for @damage do |f| %>
  <div class="form-group col-xs-12">
    <label class="col-xs-2 control-label">Location</label>
    <div class="col-xs-6">
      <%= f.text_field :location, required: true, placeholder: "On the road betwen these two buildings", class:"form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <label class="col-xs-2 control-label">Description</label>
    <div class="col-xs-6">
      <%= f.text_field :description, required: true, placeholder: "Left fender dented", class:"form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <label class="col-xs-2 control-label">Repaired By (optional)</label>
    <div class="col-xs-6">
      <%= f.text_field :repaired_by, required: false, placeholder: "Joe Schmoe", class:"form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <label class="col-xs-2 control-label">Occurred On</label>
    <div class="col-xs-6">
      <%= f.date_field :occurred_on, value: Date.today, required: true, class:"form-control datepicker" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <label class="col-xs-2 control-label">Repaired On (optional)</label>
    <div class="col-xs-6">
      <%= f.date_field :repaired_on, value: Date.today, required: false, class:"form-control datepicker" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <label class="col-xs-2 control-label">Estimated Cost</label>
    <div class="col-xs-6">
      <%= f.number_field :estimated_cost, required: true, min: 0, step: 0.01, class:"form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <label class="col-xs-2 control-label">Actual Cost (optional)</label>
    <div class="col-xs-6">
      <%= f.number_field :actual_cost, required: false, min: 0, step: 0.01, class:"form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back', :back, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
