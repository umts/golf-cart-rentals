<%= form_for @reservation do |f| %>
  <div class="form-group col-xs-12">
    <%= f.label :reservation_type, 'Reservation Type', class: 'control-label col-xs-2'%>
    <div class="col-xs-6">
      <%= f.text_field :reservation_type, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :item_type, 'Item Type', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.select :item_type_id, options_from_collection_for_select(@item_types, "id", "name"), {}, class: "selectpicker form-control", onchange: "update_disclaimer(this)"%>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :start_time, 'Start Time', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.date_field :start_time, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :end_time, 'End Time', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.date_field :end_time, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
      <%= f.submit class: "btn btn-primary"%>
      <%= link_to 'Back', reservations_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
