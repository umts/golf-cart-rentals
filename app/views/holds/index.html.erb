<% provide(:page_header, 'Holds') %>

<%= link_to 'New Hold', new_hold_path, class: "btn btn-primary" %>
<br><br>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Reason for Hold</th>
      <th>Item</th>
      <th>Item Type</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @holds.each do |hold| %>
      <tr>
        <td class='min-width'><%= hold.hold_reason %></td>
        <td class='min-width'><%= hold.item.name %></td>
        <td class='min-width'><%= hold.item_type.name %></td>
        <td class='min-width'><%= hold.start_time.to_date %></td>
        <td class='min-width'><%= hold.end_time.to_date %></td>
        <td class='min-width'>
            <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-eye-open")+" View"), hold, class: "btn btn-xs btn-success" %>
            <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-edit")+" Edit"), edit_hold_path(hold), class: "btn btn-xs btn-primary" %>
            <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-check")+" Lift Hold"), lift_hold_path(hold), class: "btn btn-xs btn-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
