<% provide(:page_header, 'Holds') %>

<%= link_to 'New Hold', new_hold_path, class: "btn btn-primary" %>
<br /><br />

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class='min-width'>Active?</th>
      <th class='min-width'>Reason for Hold</th>
      <th class='min-width'>Item</th>
      <th class='min-width'>Item Type</th>
      <th class='min-width'>Start Time</th>
      <th class='min-width'>End Time</th>
      <th class='min-width'>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @holds.each do |hold| %>
      <tr>
        <td class='min-width'><%= hold.active? %></td>
        <td class='min-width'><%= hold.hold_reason %></td>
        <td class='min-width'><%= hold.item.name %></td>
        <td class='min-width'><%= hold.item_type.name %></td>
        <td class='min-width'><%= hold.start_time.strftime("%m/%d/%y") %></td>
        <td class='min-width'><%= hold.end_time.strftime("%m/%d/%y") %></td>
        <td class='min-width'>
            <% if hold.active? %>
              <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-eye-open")+" View"), hold, class: "btn btn-xs btn-success" %>
              <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-edit")+" Edit"), edit_hold_path(hold), class: "btn btn-xs btn-primary" %>
              <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-check")+" Lift"), lift_hold_path(hold), method: :post, class: "btn btn-xs btn-warning" %>
            <% else %>
              <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-eye-open")+" View"), hold, class: "btn btn-xs btn-success" %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
