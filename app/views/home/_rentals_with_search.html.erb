<div class="panel panel-primary">
  <div class="panel-body">

    <h4 class="text-info header-no-margin">
    	<%= "Past Rentals" if rental_type == @past_rentals %>
    </h4>

    <br>

    <%= search_form_for @q, url: home_index_path, html: { method: :get }, class: 'form-inline' do |f| %>
    <div class="col-xs-2">
      <%= f.label :start_time_gteq, 'Between' %>
    </div>
    <div class="col-xs-4">
      <%= f.date_field :start_time_gteq, class: "form-control" %>
    </div>

    <div class="col-xs-1">
      <%= f.label :end_time_lteq, 'And' %>
    </div>
    <div class="col-xs-4">
      <%= f.date_field :end_time_lteq, class: "form-control" %>
    </div>

    <div class="col-xs-1">
      <%= f.submit class: "btn btn-default" %>
    </div>
    <% end %>

  </div>
  <%= render partial: 'rentals/table', locals: { rentals: rental_type } %>

  <div class="panel-footer">
    <%= will_paginate @past_rentals, renderer: BootstrapPagination::Rails %>
  </div>
</div>
