          <div class="input-group">
            <input type="text" id="multiple_userSearchQuery" required="required" class="form-control userSearchQuery" placeholder="Recipient's Name" aria-describedby="User">
            <a class="input-group-addon" data-toggle="modal" data-target="#modalSearchResults"><span class="glyphicon glyphicon-search"></span></a>
          </div>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <%= f.label :start_time, 'Pickup Date', class: 'control-label col-xs-2' %>
        <div class="col-xs-6">
          <%= f.date_field :start_time, value: @start_date, required: true, id: 'multiple_start_time', class: "form-control cost-dependent" %>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <%= f.label :end_time, 'Dropoff Date', class: 'control-label col-xs-2' %>
        <div class="col-xs-6">
          <%= f.date_field :end_time, value: @start_date.next_day, required: true, id: 'multiple_end_time', class: "form-control cost-dependent" %>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <%= label_tag :amount, 'Cost', class: 'control-label col-xs-2' %>
        <div class="col-xs-6">
          <%= number_field_tag :amount, nil, min: 0, required: true, disabled: !@current_user.has_permission?("rentals", "cost_adjustment"), id: 'multiple_amount', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <div class="col-xs-offset-2 col-xs-6">
          <div class="panel panel-primary">
            <div class="panel-heading">
              Terms and Conditions
            </div>
            <% @item_types.each do |type| %>
              <div class="panel-body no-gutter" style="max-height: 10;overflow-y: scroll;">
                <% hidden = 'disclaimer-hidden' unless type == @item_types.first %>
                <%= content_tag :span, type.disclaimer, class: "disclaimer #{hidden}", id: "disclaimer_#{type.id}" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <div class="col-xs-offset-2 col-xs-6">
          <label><input type="checkbox" name="TOC" value="Accept" onClick="accept_and_enable(this)"> I Agree To The Above Terms And Conditions</label>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <div class="col-xs-offset-2 col-xs-10">
          <%= f.submit class: "btn btn-primary", id: "TOC", disabled: "disabled" %>
          <%= link_to 'Back', :back, class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
