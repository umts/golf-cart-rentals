<ul class="nav nav-tabs">
  <li class="nav-item active">
    <a class-"nav-link active" data-toggle="tab" href="#single_day">Single Day</a>
  </li>
  <li class="nav-item">
    <a class-"nav-link" data-toggle="tab" href="#multiple_day">Multiple Day</a>
  </li>
</ul>

<div class="modal fade" id="modalSearchResults" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Matching Users</h4>
      </div>
      <div class="modal-body" id="userResults">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

<div class="tab-content">
  </br>
  <div class="tab-pane active" id="single_day" role="tabpanel">
    <%= form_for @rental, method: :post do |f| %>

      <div class="form-group col-xs-12">
        <%= f.label :type, 'Cart Type', class: 'control-label col-xs-2' %>
        <div class="col-xs-6">
          <%= f.select :item_type_id, options_from_collection_for_select(@item_types, "id", "name"), {}, id: 'single_item_type_id', class: "selectpicker form-control cost-dependent" %>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <%= f.label :user, 'User', class: 'control-label col-xs-2' %>
        <div class="col-xs-6">
          <%= f.hidden_field :user_id, id: 'single_user_id' %>
          <div class="input-group">
            <input type="text" id="single_userSearchQuery" required="required" class="form-control userSearchQuery" placeholder="Customer Spire/Email/Name" aria-describedby="User">
            <a class="input-group-addon" data-toggle="modal" data-target="#modalSearchResults"><span class="glyphicon glyphicon-search"></span></a>
          </div>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <%= f.label :start_time, 'Pickup Date', class: 'control-label col-xs-2' %>
        <div class="col-xs-6">
          <%= f.date_field :start_time, value: @start_date, required: true, id: 'single_start_time', class: "form-control cost-dependent" %>
        </div>
      </div>

      <%= f.hidden_field :end_time, value: @start_date, required: true, id: 'single_end_time', class: "form-control cost-dependent" %>

      <div class="form-group col-xs-12">
        <%= label_tag :amount, 'Cost', class: 'control-label col-xs-2' %>
        <div class="col-xs-6">
          <%= number_field_tag :amount, nil, min: 0, required: true, disabled: !@current_user.has_permission?("rentals", "cost_adjustment"), id: 'single_amount', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <div class="col-xs-offset-2 col-xs-6">
          <div class="panel panel-primary">
            <div class="panel-heading">
              Terms and Conditions
            </div>
            <% @item_types.each do |type| %>
              <div class="panel-body no-gutter" style="max-height: 10;overflow-y: scroll;">
                <% hidden = 'disclaimer-hidden' unless type == @item_types.first %>
                <%= content_tag :span, type.disclaimer, class: "disclaimer #{hidden}", id: "disclaimer_#{type.id}" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <div class="col-xs-offset-2 col-xs-6">
          <label><input type="checkbox" name="TOC" value="Accept" onClick="accept_and_enable(this)"> I Agree To The Above Terms And Conditions</label>
        </div>
      </div>

      <div class="form-group col-xs-12">
        <div class="col-xs-offset-2 col-xs-10">
          <%= f.submit class: "btn btn-primary", id: "TOC", disabled: "disabled" %>
          <%= link_to 'Back', :back, class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="tab-pane" id="multiple_day" role="tabpanel">
    <%= form_for @rental, method: :post do |f| %>

      <div class="form-group col-xs-12">
