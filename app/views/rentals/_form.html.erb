<div class="modal fade" id="modalSearchResults" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Matching Users</h4>
      </div>
      <div class="modal-body" id="userResults">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

<%= form_for @rental, method: :post do |f| %>
  <div class="form-group col-xs-12">
    <%= f.label :type, 'Cart Type', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.select :item_type_id, options_from_collection_for_select(@item_types, "id", "name"), {}, class: "selectpicker form-control cost-dependent" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :renter, 'Renter', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
          <%= f.text_field :renter_id,
            data: { tokeninput:
              { collection: @users,
                options: {tokenLimit: 1, propertyToSearch: :tag, tokenDelimiter: '', prePopulate: [{id: @current_user.id, tag: @current_user.tag}]}}},
                required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :start_time, 'Pickup Date', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.date_field :start_time, value: @start_date, required: true, id: 'rental_start_time', class: "form-control cost-dependent" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :end_time, 'Dropoff Date', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.date_field :end_time, value: @start_date, required: true, id: 'rental_end_time', class: "form-control cost-dependent" %>
    </div>
  </div>


  <div class="form-group col-xs-12">
    <%= f.label :amount, 'Cost', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.number_field :amount, value: nil, min: 0, required: true, disabled: !@current_user.has_permission?("rentals", "cost_adjustment"), id: 'rental_amount', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :date_range, 'Number of Days', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%  #(:start_time - :end_time) %>
      <%= f.number_field :date_range, value: 1, min: 0, disabled: true, id: 'rental_date_range', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-6">
      <p>
      <%= link_to 'Download Safety PDF', rentals_safety_pdf_url %>
       |
      <%= link_to 'Download Training PDF', rentals_training_pdf_url %>
      </p>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-6">
      <label><input type="checkbox" name="TOC" value="Accept" onClick="accept_and_enable(this)"> I agree to the safety and training regulations in the above documents</label>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
      <%= f.submit class: "btn btn-primary", id: 'rentalSubmit', disabled: "disabled", data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Back', :back, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
