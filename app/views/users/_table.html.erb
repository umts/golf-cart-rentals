<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Spire</th>
      <th>Department</th>
      <th class="min-width">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.spire_id %></td>
        <td><%= user.department.name %></td>
        <td class="min-width">
          <% if controller_name == 'groups' %>
            <%= render partial: 'groups/actions', locals: { group: @group, user: user } %>
          <% elsif controller_name == 'departments' %>
            <%= render partial: 'departments/actions', locals: { department: @department, user: user } %>
          <% else %>
            <%= render partial: 'users/actions', locals: { user: user } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
