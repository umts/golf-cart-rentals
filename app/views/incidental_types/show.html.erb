<% provide( :page_header, @incidental_type.name ) %>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Description</label>
  <div class="form-control-information col-xs-10"><%= @incidental_type.description %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Base Fee</label>
  <div class="form-control-information col-xs-10"><%= number_to_currency @incidental_type.base%></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Modifier Amount</label>
  <div class="form-control-information col-xs-10"><%= number_to_currency @incidental_type.modifier_amount %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Modifier Description</label>
  <div class="form-control-information col-xs-10"><%= simple_format @incidental_type.modifier_description %></div>
</div>

<div class="form-group col-xs-12">
  <div class="col-xs-offset-2 col-xs-10">
    <%= link_to 'Edit Incidental Type', edit_incidental_type_path(@incidental_type), class: "btn btn-primary" %>
    <%= link_to 'Create Incurred Incidental', new_incurred_incidental_path(:incidental_type_id => @incidental_type.id), class: "btn btn-success" %>
    <%= link_to 'Back', incidental_types_path, class: "btn btn-default" %>
  </div>
</div>
